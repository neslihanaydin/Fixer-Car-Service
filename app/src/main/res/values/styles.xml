<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FixerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/fixer_dark_blue</item>
        <item name="colorPrimaryDark">@color/fixer_dark_blue</item>
        <item name="colorOnPrimary">@color/fixer_cyan</item>
        <item name="colorAccent">@color/fixer_dark_blue</item>
        <item name="android:windowBackground">@color/fixer_dark_blue</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="ButtonTextNoCaps" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PopupTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

</resources>