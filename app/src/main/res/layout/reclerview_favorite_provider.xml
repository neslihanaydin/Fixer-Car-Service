<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="100dp"
    android:layout_gravity="center|top"
    android:layout_marginTop="15dp"
    android:background="@drawable/rounded_background"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/favImgLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="0"
        android:src="@drawable/icon_car" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/favTxtProviderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Provider Name"
            android:textAlignment="center"
            android:textColor="#09032F"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/favTxtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Phone Number"
            android:textAlignment="center"
            android:textColor="@color/fixer_gray"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/favTxtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Provider Address"
            android:textAlignment="center"
            android:textColor="@color/fixer_gray"
            android:textSize="15dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/favImgRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:layout_weight="0"
        android:background="@drawable/icon_arrow_circle_right" />

</LinearLayout>
