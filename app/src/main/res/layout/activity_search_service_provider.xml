<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/fixer_toolbar" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_field"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/edTxtSearchByCity"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:autofillHints=""
            android:background="@drawable/edit_field"
            android:ems="10"
            android:hint="@string/txtSearchByCity"
            android:inputType="text"
            android:paddingStart="20dp"
            android:textColor="@color/fixer_dark_blue"
            android:textColorHint="@color/fixer_gray"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btnSearchByCity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_field"
            android:contentDescription="@string/imgDesc"
            app:srcCompat="@drawable/icon_search" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#09032F"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_provider_list"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>
